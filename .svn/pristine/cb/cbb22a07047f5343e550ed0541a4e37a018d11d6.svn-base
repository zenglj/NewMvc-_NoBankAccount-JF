    //var SearchWhere="&startTime="+ $("#StartDate").datetimebox('getValue')+ "&endTime="+ $("#EndDate").datetimebox('getValue')+"&areaName="+ $("#FAreaName").combobox('getText')+"&FCode="+ $("#FCode").numberbox('getValue')+ "&FName="+ $("#FName").val();
