<script type="text/javascript">
    function changeRmbDX() {
        if ($("#selSaveType").find("option:selected").val() == "")
        {
            alert("请先选择一个扣款类型");
            return false;
        }
        var kkmoney = $("#KKMoney").val();
        var rmbdx = DX(kkmoney);
        $("#rmbDX").html(rmbdx);
    }

    //提交扣款
    function btnSubmitKK() {
        
        if ($("#selSaveType").find("option:selected").val() == "") {
            alert("请先选择一个扣款类型");
            return false;
        }
        var remark = "";
        if ($("#inputMoneyPerpose").val() == "1") {
            if ("" == $("#selMoneyPurpose").find("option:selected").val()) {
                alert("请先选择资金用途，谢谢");
                return false;
            } else {
                remark = $("#selMoneyPurpose").find("option:selected").text();
            }
        }


        var kkmoney = $("#KKMoney").val();
        if (kkmoney == "") {
            alert("请输入金额");
            return false;
        }

        if (isNaN(kkmoney)) {
            $("#lblInfo").text("错误：数量必须是数字的，不能其他字母");
            return false;
        }
        $("#btnSubmitKK").attr("disabled", "disabled");//禁用扣款提交按钮
        $.post("/SelfPayment/btnSubmitKK", {
            "FCrimeCode": $("#FCrimeCode").val()
            , "KKMoney": kkmoney
            , "FIcCardCode": $("#FIcCardCode").val()
            , "FManagerCard": $("#FManagerCard").val()
            , "DType": $("#selSaveType").find("option:selected").val()
            , "Remark": remark
        }
            , function (data, status) {
                if ("success" != status) {
                    return false;
                } else {
                    var words = data.split("|");
                    if (words[0] == "OK") {
                        var vcrds = $.parseJSON(words[1]);
                        var moneyInfo = "";
                        for (var i = 0; i < vcrds.length;i++){
                            if (vcrds[i].AccType == 0) {
                                if (moneyInfo == ""){
                                    moneyInfo = "存款账户扣：" + vcrds[i].CAmount + " 元";

                                } else {
                                    moneyInfo =moneyInfo+ ",存款账户扣：" + vcrds[i].CAmount + " 元";
                                }
                            } else {
                                if (moneyInfo == "") {
                                    moneyInfo = "报酬账户扣：" + vcrds[i].CAmount + " 元";

                                } else {
                                    moneyInfo = moneyInfo + ",报酬账户扣：" + vcrds[i].CAmount + " 元";
                                }
                            }
                        }
                        $("#lblInfo").html("扣款成功：" + moneyInfo);
                        $("#FCrimeCode").val('');
                        $("#FIcCardCode").val('');
                        $("#KKMoney").val('');
                        alert("恭喜您，扣款成功");
                    } else {
                        $("#lblInfo").html("扣款失败：" + data);
                        alert(data);
                    }

                }

        });
    }

    function selectKKType() {
        $.post("/SelfPayment/getKK_Remark", {
            "KeyModeValue": $("#selSaveType").find("option:selected").val()
        }
            , function (data, status) {
                if ("success" != status) {
                    return false;
                } else {
                    var words = data.split("|");
                    if (words[0] == "OK") {
                        $("#selMoneyPurpose").empty();
                        var options = "<option value='' selected='selected'>请选择资金用途</option>";
                        remarks = $.parseJSON(words[1]);
                        $("#selMoneyPurpose").empty();
                        for (var i = 0; i < remarks.length; i++) {
                            options = options + "<option value='" + i+1 + "' >" + remarks[i] + "</option>";
                        }
                        $("#selMoneyPurpose").append(options);

                        $("#divMoneyPerpose").show();
                        $("#inputMoneyPerpose").val(1);
                        
                    } else {
                        $("#divMoneyPerpose").hide();
                        $("#inputMoneyPerpose").val(0);
                        
                    }

                }

            });
    }
</script>

